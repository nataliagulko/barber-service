{
	"defaultSeverity": "error",
	"extends": [
		"tslint:recommended"
	],
	"linterOptions": {
		"exclude": [
			"node_modules/**",
			"test/**"
		]
	},
	"jsRules": {},
	"rules": {
		"indent": [
			true,
			"tabs",
			4
		],
		"semicolon": false,
		"member-ordering": [
			true,
			{
				"order": [
					"static-field",
					"instance-field",
					"constructor",
					"private-instance-method",
					"protected-instance-method"
				]
			}
		],
		"max-line-length": false,
		"no-duplicate-imports": true,
		"no-empty": false,
		"interface-name": false,
		"member-access": false,
		"object-literal-sort-keys": false
	},
	"rulesDirectory": []
}