<form class="login-form" {{action 'authenticate' on='submit' }}>
    <h3 class="form-title font-green">Войти</h3>
    <div class="form-group">
        <label class="control-label visible-ie8 visible-ie9">Телефон</label>
        {{masked-input id="identification" value=identification mask=phoneMask class="form-control placeholder-no-fix" placeholder='Телефон'
        autocomplete="off" type="tel"}}
    </div>
    <div class="form-group">
        <label class="control-label visible-ie8 visible-ie9">Пароль</label>
        {{input id='password' class="form-control placeholder-no-fix" placeholder='Пароль' type='password' value=password}}
    </div>
    <div class="form-actions">
        <button type="submit" class="btn green uppercase">Войти</button>
        {{#link-to "registration" class="forget-password"}} Восстановить доступ {{/link-to}}
    </div>
</form>