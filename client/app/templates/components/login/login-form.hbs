<form class="login-form" action="index.html" method="post" novalidate="novalidate" style="display: block;">
    <h3 class="form-title font-green">Войти</h3>
    <div class="form-group">
        <label class="control-label visible-ie8 visible-ie9">Телефон</label>
        <input class="form-control form-control-solid placeholder-no-fix" autocomplete="off" placeholder="Телефон" type="text">
    </div>
    <div class="form-group">
        <label class="control-label visible-ie8 visible-ie9">Пароль</label>
        <input class="form-control form-control-solid placeholder-no-fix" autocomplete="off" placeholder="Пароль" type="password">
    </div>
    <div class="form-actions">
        <button type="submit" class="btn green uppercase">Войти</button>
        {{#link-to "login.forget" class="forget-password"}}
            Восстановить доступ
        {{/link-to}}
    </div>
</form>