<div class="row">
    <div class="col-md-6">
        {{#ticket-modal/ticket-modal-footer-btn class="btn-default pull-left" event=event act="remove" modal=modal}}
            <i class="glyphicon glyphicon-trash"></i>
            {{t "ticket.delete.label"}}
        {{/ticket-modal/ticket-modal-footer-btn}}
    </div>
    <div class="col-md-6">
        {{#if (eq event.data.status "NEW")}}
            {{#ticket-modal/ticket-modal-footer-btn class="btn-danger" event=event act="reject" modal=modal}}
                <i class="glyphicon glyphicon-remove"></i>
            	{{t "ticket.reject.label"}}
            {{/ticket-modal/ticket-modal-footer-btn}}
            {{#ticket-modal/ticket-modal-footer-btn class="btn-success" event=event act="accept" modal=modal}}
                <i class="glyphicon glyphicon-ok"></i>
            	{{t "ticket.accept.label"}}
            {{/ticket-modal/ticket-modal-footer-btn}}
        {{else}}
            &nbsp;
        {{/if}}
    </div>
</div>