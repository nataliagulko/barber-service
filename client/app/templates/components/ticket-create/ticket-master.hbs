<div id="ticket-master" class="portlet light bordered right-panel ticket-portlet {{if (not-eq activeStep "#master-step") "hidden"}}">
	<div class="portlet-title">
		<div class="caption">
			<span class="caption-subject font-red-sunglo">{{t "ticket.master.choose"}}</span>
		</div>
	</div>
	<div class="portlet-body ticket-portlet-body">
		<div class="tiles">
			{{#each masters as |master|}}
				{{ticket-create/ticket-master-card master=master}}
			{{/each}}
		</div>
	</div>
</div>