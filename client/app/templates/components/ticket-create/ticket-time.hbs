<div id="ticket-time" class="portlet light bordered right-panel ticket-portlet {{if (not-eq activeStep "#time-step") "hidden"}}">
	<div class="portlet-title">
		<div class="caption">
			<span class="caption-subject font-red-sunglo">{{t "ticket.time.choose"}}</span>
		</div>
	</div>
	<div class="portlet-body ticket-portlet-body">
		{{#if ticket.master}}
			<input id="ticket-time-picker" class="timepicker" onchange= {{action "onTicketTimeChange" value="target.value"}}>
		{{else}}
			{{ticket-create/ticket-hint hint=hint}}
		{{/if}}
	</div>
</div>