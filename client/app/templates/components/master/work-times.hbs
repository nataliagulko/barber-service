<div class="row">
    <div class="col-md-8">
        <div class="portlet light bordered">
            <div class="portlet-title">
                <div class="caption font-dark">
                    <i class="icon-clock font-green-sharp "></i>
                    <span class="caption-subject bold uppercase">{{master.fullname}}</span>
                </div>
            </div>
            <div class="portlet-body form">
                {{#each jointWorkTimes as |workTime|}}
                    {{master/work-time-row workTime=workTime}}
                {{/each}}
                <div class="form-actions">
                    <div class="row">
                        <div class="col-md-offset-2 col-md-10">
                            <button type="submit" class="btn btn-success" {{action "saveWorkTimes"}}>Сохранить</button>
                            {{#link-to "master" class="btn btn-default"}}
                                Отмена
                            {{/link-to}}
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>